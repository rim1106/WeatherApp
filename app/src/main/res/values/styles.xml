<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="search_input">
        <item name="android:textStyle">normal</item>
        <item name="android:background">@drawable/input_bg</item>
        <item name="android:layout_margin">@dimen/search_margin</item>
        <item name="android:paddingTop">@dimen/input_top_padding</item>
        <item name="android:paddingBottom">@dimen/input_bottom_padding</item>
        <item name="android:paddingLeft">@dimen/input_left_padding</item>
        <item name="android:paddingRight">@dimen/input_right_padding</item>
        <item name="height">@dimen/input_height</item>
    </style>
    <style name="header">
        <item name="android:textColor">@color/headerColor</item>
        <item name="android:layout_marginLeft">@dimen/text_margin</item>
        <item name="android:textSize">@dimen/header_size</item>
    </style>
    <style name="subheader">
        <item name="android:textColor">@color/subHeaderColor</item>
        <item name="android:layout_marginLeft">@dimen/text_margin</item>
        <item name="android:textSize">@dimen/subheader_size</item>
    </style>
    <style name="city">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/cityColor</item>
        <item name="android:textSize">@dimen/city_size</item>
    </style>
    <style name="weather">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/weatherColor</item>
        <item name="android:textSize">@dimen/weather_size</item>
    </style>
</resources>
