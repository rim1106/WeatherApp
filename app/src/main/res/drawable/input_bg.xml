<?xml version="1.0" encoding="utf-8"?>
<selector>
    <item n1:state_enabled="false"
        xmlns:n1="http://schemas.android.com/apk/res/android">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <corners android:radius="@dimen/input_radius" />
            <stroke android:width="1dp" android:color="@android:color/transparent" />
            <solid android:color="@android:color/transparent"/>
            <padding android:left="0dp"
                android:right="0dp"/>
        </shape>
    </item>
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <corners android:radius="@dimen/input_radius" />
            <stroke android:width="1dp" android:color="@color/inputBorder" />
            <solid android:color="@color/inputBG"/>
            <padding android:left="0dp"
                android:right="0dp"/>
        </shape>
    </item>
</selector>